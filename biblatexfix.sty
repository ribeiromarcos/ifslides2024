% Correções para o biblatex com ABNT
\ProvidesPackage{biblatexfix}%

% ==================================================
% Pacotes necessários
% ==================================================
\RequirePackage[style=abnt,repeatfields,giveninits, uniquename=init,noslsn,alldates=short,backend=biber]{biblatex}%
% URLs
\RequirePackage{xurl}%

% Redefinição do título de referências
\defbibheading{bibliography}[REFERÊNCIAS]{\vspace*{-12pt}}%

% Citações explícitas
\newcommand{\citet}{\textcite}%

% URLs na mesma fonte do texto e quebra correta
\urlstyle{same}%
\setcounter{biburlnumpenalty}{100}%
\setcounter{biburlucpenalty}{100}%
\setcounter{biburllcpenalty}{100}%

% Remoção de < e > nas URLs
\DeclareFieldFormat{url}{\bibstring{urlfrom}\addcolon\addspace\url{#1}}%

